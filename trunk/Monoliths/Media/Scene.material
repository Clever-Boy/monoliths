

material Rocky
{
	technique
	{
		pass
		{
			ambient 0.5 0.5 0.5 1.0
			diffuse 5 5 5 1.0 
			texture_unit
			{
				texture rockwall.tga
				colour_op modulate
			}
		}
	}
}

abstract material Phong
{
	lod_stategy Distance
	lod_values 2000 4000 8000
	technique main
	{
		pass 
		{
			ambient $ambient
			diffuse $diffuse
			specular $specular

			vertex_program_ref VS_Phong { }
			fragment_program_ref PS_Phong { }
		}
	}

	technique toonshade
	{
		scheme toonshade
		pass
		{
			ambient $ambient
			diffuse $diffuse
			specular $specular

			vertex_program_ref VS_Phong { }
			fragment_program_ref PS_PhongToonshade { }
		}
	}

	technique depthmap
	{
		scheme depthmap
		pass
		{
			vertex_program_ref VS_DepthMap { }
			fragment_program_ref PS_DepthMap { }
		}
	}
}


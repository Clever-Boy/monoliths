abstract material PhongTextured
{
	technique main
	{
		pass 
		{
			ambient $ambient
			diffuse $diffuse
			specular $specular

			vertex_program_ref VS_Phong { }
			fragment_program_ref PS_Phong { }
			/*
			texture_unit
			{
				texture $texture
			}
			*/
		}
	}
	technique toonshade
	{
		scheme toonshade
		pass
		{
			ambient $ambient
			diffuse $diffuse
			specular $specular

			vertex_program_ref VS_Phong { }
			fragment_program_ref PS_PhongToonshadeTextured { }

			texture_unit
			{
				//tex_address_mode mirror
				texture $texture
			}
		}
	}

	technique depthmap
	{
		scheme depthmap
		pass
		{
			vertex_program_ref VS_DepthMap { }
			fragment_program_ref PS_DepthMap { }
		}
	}
}


material compose
{
	technique
	{
		pass
		{
			cull_hardware none
			cull_software none
			depth_func always_pass
			fog_colour 0.0 0.0 0.0 1

			vertex_program_ref VS_Quad
			{
			}

			fragment_program_ref PS_Compose 
			{ 
			}

			texture_unit
			{
				filtering none
				tex_address_mode clamp
			}

			texture_unit
			{
				filtering none
				tex_address_mode clamp
			}

			texture_unit
			{
				filtering none
				tex_address_mode clamp
			}
		}
	}
}

